{
  "name": "@gravito/forge",
  "version": "1.0.0-beta.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "File Processing Orbit for Gravito - Video and Image Processing with Real-time Status Tracking",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "test": "bun test",
    "typecheck": "bun tsc -p tsconfig.json --noEmit --skipLibCheck",
    "test:coverage": "bun test --coverage --coverage-threshold=80",
    "test:ci": "bun test --coverage --coverage-threshold=80"
  },
  "keywords": [
    "gravito",
    "orbit",
    "file-processing",
    "video",
    "image",
    "ffmpeg",
    "imagemagick",
    "sse",
    "real-time"
  ],
  "author": "Carl Lee <carllee0520@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "@gravito/core": "workspace:*",
    "@gravito/nebula": "workspace:*",
    "@gravito/stream": "workspace:*"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "@gravito/nebula": {
      "optional": true
    },
    "@gravito/stream": {
      "optional": true
    }
  },
  "devDependencies": {
    "@gravito/nebula": "workspace:*",
    "@gravito/stream": "workspace:*",
    "@types/react": "^18.0.0",
    "bun-types": "latest",
    "@gravito/core": "workspace:*",
    "@gravito/photon": "workspace:*",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vue": "^3.5.26"
  },
  "homepage": "https://github.com/gravito-framework/gravito#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gravito-framework/gravito.git",
    "directory": "packages/forge"
  }
}