{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "types": [
            "bun-types"
        ],
        "paths": {
            "@gravito/core": [
                "../../packages/core/src/index.ts"
            ],
            "@gravito/*": [
                "../../packages/*/src/index.ts"
            ]
        },
        "baseUrl": "."
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}