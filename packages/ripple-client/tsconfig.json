{
  "extends": "../../tsconfig.frontend.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gravito/core": [
        "../../packages/core/src/index.ts"
      ],
      "@gravito/*": [
        "../../packages/*/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}