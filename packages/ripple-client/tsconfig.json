{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "lib": [
            "DOM",
            "ES2022"
        ],
        "baseUrl": ".",
        "paths": {
            "@gravito/core": [
                "../../packages/core/src/index.ts"
            ],
            "@gravito/*": [
                "../../packages/*/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}