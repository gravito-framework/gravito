{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "types": ["bun-types"],
        "paths": {
            "@gravito/core": [
                "../../packages/core/src/index.ts"
            ],
            "@gravito/*": [
                "../../packages/*/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}