{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@gravito/core": [
                "../../packages/core/src/index.ts"
            ],
            "@gravito/core/*": [
                "../../packages/core/src/*.ts"
            ],
            "@gravito/*": [
                "../../packages/*/src/index.ts"
            ],
            "@gravito/photon/*": [
                "../../packages/photon/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}
