{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "rootDir": "src",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "composite": true,
        "types": ["bun-types"],
        "paths": {
            "hono/*": [
                "../../node_modules/hono/dist/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}