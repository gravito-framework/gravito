{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "paths": {
            "hono/*": [
                "../../node_modules/hono/dist/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}