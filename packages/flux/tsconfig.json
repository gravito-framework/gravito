{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@gravito/core": ["../../packages/core/src/index.ts"],
            "@gravito/*": ["../../packages/*/src/index.ts"]
        },
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist",
        "skipLibCheck": true,
        "noEmit": false,
        "types": ["bun-types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}