{
  "name": "@gravito/mass",
  "version": "1.0.0-beta.1",
  "description": "TypeBox-based validation for Gravito - High-performance schema validation with full TypeScript support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "typecheck": "bun tsc --noEmit --skipLibCheck",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "test:coverage": "bun test --coverage --coverage-threshold=80",
    "test:ci": "bun test --coverage --coverage-threshold=80"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@hono/typebox-validator": "^1.1.0",
    "@sinclair/typebox": "^0.34.0"
  },
  "peerDependencies": {
    "@gravito/core": "workspace:*"
  },
  "devDependencies": {
    "bun-types": "^1.1.0",
    "@gravito/photon": "workspace:*",
    "typescript": "^5.0.0"
  },
  "author": "Carl Lee <carllee0520@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gravito-framework/gravito.git",
    "directory": "packages/mass"
  },
  "keywords": [
    "gravito",
    "validation",
    "typebox",
    "schema",
    "middleware",
    "typescript"
  ],
  "homepage": "https://github.com/gravito-framework/gravito#readme"
}