{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "emitDeclarationOnly": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "@gravito/core": [
                "../../packages/core/dist/index.d.ts"
            ],
            "@gravito/photon/client": [
                "../../packages/photon/dist/client.d.ts"
            ],
            "@gravito/photon": [
                "../../packages/photon/dist/index.d.ts"
            ],
            "@gravito/*": [
                "../../packages/*/dist/index.d.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}