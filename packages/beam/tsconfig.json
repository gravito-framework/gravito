{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "paths": {
            "@gravito/core": [
                "../../packages/core/src/index.ts"
            ],
            "@gravito/photon/client": [
                "../../packages/photon/src/client.ts"
            ],
            "@gravito/photon": [
                "../../packages/photon/src/index.ts"
            ],
            "@gravito/*": [
                "../../packages/*/src/index.ts"
            ],
            "@gravito/beam": [
                "./src/index.ts"
            ]
        },
        "types": [
            "bun-types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}