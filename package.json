{
    "name": "gravito-monorepo",
    "private": true,
    "workspaces": [
        "packages/*",
        "templates/*",
        "examples/*"
    ],
    "scripts": {
        "build": "npx turbo run build",
        "test": "bun run --filter './packages/*' test",
        "test:ci": "bun run --filter './packages/*' test",
        "lint": "biome lint .",
        "format": "biome format --write .",
        "check": "biome check . --diagnostic-level=error",
        "typecheck": "bun run --filter './packages/*' typecheck",
        "version:update": "bun run scripts/update-package-versions.ts",
        "version:check": "bun run scripts/check-versions.ts",
        "publish:validate": "bun run scripts/validate-before-publish.ts",
        "publish:all": "bun run scripts/publish-all.ts",
        "publish:dry-run": "bun run scripts/publish-all.ts --dry-run",
        "changeset": "changeset",
        "changeset:version": "changeset version",
        "changeset:publish": "changeset publish"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.10",
        "@changesets/cli": "^2.29.8",
        "@types/node": "latest",
        "bun-types": "latest",
        "hono": "^4.0.0",
        "simple-git-hooks": "^2.13.1",
        "turbo": "latest",
        "typescript": "^5.9.3"
    },
    "simple-git-hooks": {
        "pre-commit": "export PATH=\"$HOME/.bun/bin:$PATH\" && bunx lint-staged",
        "pre-push": "export PATH=\"$HOME/.bun/bin:$PATH\" && bun run check && bun run typecheck && bun run test"
    },
    "lint-staged": {
        "*.{js,ts,cjs,mjs}": [
            "biome check --write"
        ]
    },
    "version": "0.6.0-alpha",
    "packageManager": "bun@1.3.4"
}