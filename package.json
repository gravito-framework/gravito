{
    "name": "gravito-monorepo",
    "private": true,
    "workspaces": [
        "packages/*",
        "templates/*",
        "examples/*"
    ],
    "scripts": {
        "build": "bun run --filter '*' build",
        "test": "bun run --filter '*' test",
        "lint": "biome lint .",
        "format": "biome format --write .",
        "check": "biome check .",
        "typecheck": "bun run --filter '*' typecheck",
        "version:update": "bun run scripts/update-package-versions.ts",
        "version:check": "bun run scripts/check-versions.ts",
        "publish:validate": "bun run scripts/validate-before-publish.ts",
        "publish:all": "bun run scripts/publish-all.ts",
        "publish:dry-run": "bun run scripts/publish-all.ts --dry-run"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.8",
        "@types/bun": "latest",
        "simple-git-hooks": "^2.13.1",
        "typescript": "^5.9.3"
    },
    "simple-git-hooks": {
        "pre-commit": "export PATH=\"$HOME/.bun/bin:$PATH\" && bun run test && bunx lint-staged"
    },
    "lint-staged": {
        "*.{js,ts,cjs,mjs}": [
            "biome check --write"
        ]
    }
}