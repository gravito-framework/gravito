{
    "name": "gravito-monorepo",
    "private": true,
    "workspaces": [
        "packages/*",
        "templates/*",
        "examples/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "test": "turbo run test --filter='./packages/*'",
        "test:coverage": "turbo run test:coverage --filter='./packages/*'",
        "test:ci": "turbo run test:coverage --filter='./packages/*'",
        "lint": "biome lint .",
        "format": "biome format --write .",
        "check": "biome check . --diagnostic-level=error",
        "typecheck": "turbo run typecheck --filter='./packages/*'",
        "version:check": "bun run scripts/check-versions.ts",
        "changeset": "changeset",
        "ci:version": "changeset version",
        "ci:publish": "changeset publish",
        "pub:beta": "changeset publish --tag beta",
        "pub:snapshot": "changeset publish --tag snapshot",
        "launchpad:up": "bun scripts/start-launchpad.ts",
        "launchpad:compose": "docker-compose -f docker-compose.launchpad.yml up --build -d"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.10",
        "@changesets/cli": "^2.29.8",
        "@types/node": "latest",
        "bun-types": "latest",
        "hono": "^4.0.0",
        "simple-git-hooks": "^2.13.1",
        "turbo": "latest",
        "typescript": "^5.9.3"
    },
    "simple-git-hooks": {
        "pre-commit": "export PATH=\"~/.bun/bin:$PATH\" && bunx lint-staged",
        "pre-push": "export PATH=\"~/.bun/bin:$PATH\" && bun run check && turbo run typecheck test:coverage --filter=[HEAD^1]"
    },
    "lint-staged": {
        "*.{js,ts,cjs,mjs}": [
            "biome check --write --diagnostic-level=error"
        ]
    },
    "version": "0.5.0-alpha",
    "packageManager": "bun@1.3.4"
}
