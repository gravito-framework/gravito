{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": ["src/**", "package.json", "tsconfig.json"],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "test": {
            "dependsOn": [],
            "inputs": ["src/**", "tests/**", "package.json", "tsconfig.json", "bunfig.toml"],
            "outputs": []
        },
        "lint": {
            "outputs": []
        },
        "typecheck": {
            "inputs": ["src/**", "tests/**", "package.json", "tsconfig.json"],
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}