{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../..",
    "baseUrl": "../..",
    "paths": {
      "gravito-core": ["packages/core/src/index.ts"],
      "gravito-core/*": ["packages/core/src/*.ts"],
      "@gravito/*": ["packages/*/src/index.ts", "satellites/*/src/index.ts"],
      "@gravito/photon/*": ["packages/photon/src/*"],
      "@/*": ["satellites/cart/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "tests"]
}
