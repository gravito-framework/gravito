{
  "version": "1.0.0",
  "description": "Gravito 模組品牌化重命名映射表",
  "mappings": {
    "核心模組": {
      "gravito-core (Core Engine)": {
        "old": "gravito-core",
        "new": "@gravito/graviton",
        "type": "split",
        "description": "核心引擎部分"
      },
      "gravito-core (Router)": {
        "old": "gravito-core",
        "new": "@gravito/horizon",
        "type": "split",
        "description": "路由功能"
      }
    },
    "數據存儲": {
      "@gravito/orbit-db": {
        "old": "@gravito/orbit-db",
        "new": "@gravito/matter",
        "description": "SQL 數據庫 / ORM"
      },
      "@gravito/orbit-mongo": {
        "old": "@gravito/orbit-mongo",
        "new": "@gravito/dark-matter",
        "description": "MongoDB / NoSQL"
      },
      "@gravito/orbit-database": {
        "old": "@gravito/orbit-database",
        "new": "@gravito/matter",
        "description": "數據庫抽象層（可能與 orbit-db 合併）",
        "note": "需要確認是否與 orbit-db 合併"
      }
    },
    "快取系統": {
      "@gravito/orbit-redis": {
        "old": "@gravito/orbit-redis",
        "new": "@gravito/plasma",
        "description": "Redis 極速快取"
      },
      "@gravito/orbit-cache": {
        "old": "@gravito/orbit-cache",
        "new": "@gravito/stasis",
        "description": "靜態快取 (File/Internal)"
      }
    },
    "會話與中間件": {
      "@gravito/orbit-session": {
        "old": "@gravito/orbit-session",
        "new": "@gravito/orbit",
        "description": "會話管理"
      },
      "middleware (core)": {
        "old": "gravito-core (middleware)",
        "new": "@gravito/field",
        "type": "extract",
        "description": "中間件系統（可能需要從 core 拆分）"
      }
    },
    "身分與權限": {
      "@gravito/orbit-auth (Auth)": {
        "old": "@gravito/orbit-auth",
        "new": "@gravito/isotope",
        "type": "split",
        "description": "身分認證"
      },
      "@gravito/orbit-auth (Permissions)": {
        "old": "@gravito/orbit-auth",
        "new": "@gravito/charge",
        "type": "split",
        "description": "權限管控 (RBAC)"
      }
    },
    "前端與渲染": {
      "@gravito/orbit-inertia": {
        "old": "@gravito/orbit-inertia",
        "new": "@gravito/momentum",
        "description": "Inertia.js 支援"
      },
      "@gravito/orbit-view": {
        "old": "@gravito/orbit-view",
        "new": "@gravito/photon",
        "description": "模板引擎 / SSR（包含影像處理）"
      }
    },
    "背景任務": {
      "@gravito/orbit-scheduler": {
        "old": "@gravito/orbit-scheduler",
        "new": "@gravito/chronon",
        "description": "排程任務 (Cron)"
      },
      "@gravito/orbit-queue": {
        "old": "@gravito/orbit-queue",
        "new": "@gravito/kinetic",
        "description": "背景任務佇列"
      }
    },
    "通訊與通知": {
      "@gravito/orbit-broadcasting": {
        "old": "@gravito/orbit-broadcasting",
        "new": "@gravito/gravity-wave",
        "description": "推播功能"
      },
      "@gravito/orbit-notifications": {
        "old": "@gravito/orbit-notifications",
        "new": "@gravito/flare",
        "description": "訊息通知 (Email/SMS)"
      },
      "@gravito/orbit-mail": {
        "old": "@gravito/orbit-mail",
        "new": "@gravito/signal",
        "description": "郵件服務"
      }
    },
    "驗證與請求": {
      "@gravito/validator": {
        "old": "@gravito/validator",
        "new": "@gravito/mass",
        "description": "數據校驗"
      },
      "@gravito/orbit-request": {
        "old": "@gravito/orbit-request",
        "new": "@gravito/wave",
        "description": "請求處理與驗證"
      }
    },
    "SEO 與文檔": {
      "@gravito/seo-core": {
        "old": "@gravito/seo-core",
        "new": "@gravito/luminosity",
        "description": "SEO / Metadata"
      },
      "@gravito/seo-adapter-hono": {
        "old": "@gravito/seo-adapter-hono",
        "new": "@gravito/luminosity-adapter-photon",
        "description": "Photon SEO 適配器"
      },
      "@gravito/seo-adapter-express": {
        "old": "@gravito/seo-adapter-express",
        "new": "@gravito/luminosity-adapter-express",
        "description": "Express SEO 適配器"
      },
      "@gravito/seo-cli": {
        "old": "@gravito/seo-cli",
        "new": "@gravito/luminosity-cli",
        "description": "SEO CLI 工具"
      },
      "api-documentation (future)": {
        "old": "api-documentation",
        "new": "@gravito/hologram",
        "type": "future",
        "description": "API 文檔生成（未來模組）"
      }
    },
    "存儲與內容": {
      "@gravito/orbit-storage": {
        "old": "@gravito/orbit-storage",
        "new": "@gravito/nebula",
        "description": "檔案存儲 / OSS"
      },
      "@gravito/orbit-content": {
        "old": "@gravito/orbit-content",
        "new": "@gravito/nebula-content",
        "description": "內容管理系統",
        "note": "或考慮與 nebula 合併"
      }
    },
    "國際化": {
      "@gravito/orbit-i18n": {
        "old": "@gravito/orbit-i18n",
        "new": "@gravito/cosmos",
        "description": "國際化 (i18n)"
      }
    },
    "網站地圖": {
      "@gravito/orbit-sitemap": {
        "old": "@gravito/orbit-sitemap",
        "new": "@gravito/constellation",
        "description": "網站地圖生成"
      }
    },
    "工具與客戶端": {
      "@gravito/client": {
        "old": "@gravito/client",
        "new": "@gravito/beam",
        "description": "API 客戶端（類型安全）",
        "note": "原建議 Spectrum，因衝突改為 Beam（光束）"
      },
      "@gravito/cli": {
        "old": "@gravito/cli",
        "new": "@gravito/pulse",
        "description": "CLI 工具"
      },
      "logger (core)": {
        "old": "gravito-core (logger)",
        "new": "@gravito/emission",
        "type": "extract",
        "description": "日誌觀測 / Telemetry（可能需要從 core 拆分）",
        "note": "原建議 Spectrum，因衝突改為 Emission（發射）"
      }
    },
    "其他功能": {
      "formula (helpers)": {
        "old": "helpers/utils",
        "new": "@gravito/formula",
        "type": "extract",
        "description": "工具函數（可能需要從 core 拆分）"
      },
      "drift (migrations)": {
        "old": "@gravito/orbit-db (migrations)",
        "new": "@gravito/drift",
        "type": "extract",
        "description": "數據庫遷移（可能需要從 orbit-db 拆分）"
      },
      "flux (binary)": {
        "old": "binary-stream",
        "new": "@gravito/flux",
        "type": "future",
        "description": "二進制流處理（未來模組）"
      },
      "deflector (security)": {
        "old": "security",
        "new": "@gravito/deflector",
        "type": "future",
        "description": "安全防護 (CORS/CSRF)（未來模組）"
      },
      "resonance (oauth)": {
        "old": "oauth",
        "new": "@gravito/resonance",
        "type": "future",
        "description": "外部登入 (OAuth/Social Login)（未來模組）"
      },
      "pulsar (websocket)": {
        "old": "websocket",
        "new": "@gravito/pulsar",
        "type": "future",
        "description": "即時通訊 (WebSocket)（未來模組）"
      },
      "echo (webhooks)": {
        "old": "webhooks",
        "new": "@gravito/echo",
        "type": "future",
        "description": "外部回傳 (Webhooks)（未來模組）"
      },
      "entanglement (trpc)": {
        "old": "trpc",
        "new": "@gravito/entanglement",
        "type": "future",
        "description": "端對端同步 (tRPC)（未來模組）"
      },
      "inflation (scaling)": {
        "old": "microservices",
        "new": "@gravito/inflation",
        "type": "future",
        "description": "分散擴張 / Microservices（未來模組）"
      },
      "orbital (di)": {
        "old": "gravito-core (DI)",
        "new": "@gravito/orbital",
        "type": "extract",
        "description": "依賴注入 (DI)（可能需要從 core 拆分）"
      }
    }
  },
  "notes": {
    "命名衝突解決": {
      "Spectrum": "原計劃用於 API 客戶端和 Logger，現改為 Beam (API 客戶端) 和 Emission (Logger)"
    },
    "拆分策略": {
      "gravito-core": "拆分為 graviton (核心引擎) 和 horizon (路由)",
      "orbit-auth": "拆分為 isotope (認證) 和 charge (權限)",
      "middleware": "可能需要從 core 拆分為 field",
      "logger": "可能需要從 core 拆分為 emission",
      "helpers": "可能需要從 core 拆分為 formula",
      "di": "可能需要從 core 拆分為 orbital"
    },
    "未來模組": "標記為 future 的模組目前不存在，計劃在未來實現"
  }
}

