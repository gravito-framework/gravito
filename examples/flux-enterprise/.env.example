# Server Configuration
PORT=4002
APP_NAME=Flux Enterprise Demo
APP_VERSION=0.1.0
GRAVITO_DEBUG=true

# Database
DATABASE_URL=sqlite:./flux-enterprise.db

# Queue Configuration
# Options: memory, rabbitmq, redis, kafka, sqs
QUEUE_DRIVER=rabbitmq
TRACE_PATH=.flux-enterprise/trace.ndjson

# Driver: Redis
REDIS_URL=redis://localhost:6379

# Driver: RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_EXCHANGE=orders.workflow
RABBITMQ_QUEUE=orders.workflow

# Driver: Kafka (Optional implementation)
# KAFKA_BROKERS=localhost:9092
# KAFKA_GROUP_ID=flux-workers

# Driver: SQS (Optional implementation)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
